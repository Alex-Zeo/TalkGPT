# TalkGPT Environment Configuration
# This file contains environment variables for the TalkGPT transcription pipeline

# OpenMP Configuration - Fix for multiple OpenMP runtime libraries
# This resolves the "libiomp5md.dll already initialized" error on Windows
KMP_DUPLICATE_LIB_OK=TRUE

# PyTorch Configuration
# Optimize CPU performance
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8

# Hugging Face Configuration
# Enable faster downloads with Xet Storage
HF_HUB_ENABLE_HF_TRANSFER=1

# Logging Configuration
# Set log levels for various components
PYTHONUNBUFFERED=1

# GPU Configuration (if available)
# CUDA_VISIBLE_DEVICES=0

# Model Cache Configuration
# Uncomment to set custom cache directory
# HF_HOME=/path/to/custom/cache
# TRANSFORMERS_CACHE=/path/to/custom/cache

